@page "/"
@rendermode InteractiveAuto

@inject NavigationManager nav
@inject IJSRuntime js

<PageTitle>9 Gates Home</PageTitle>

<div class="container py-4 home-page">
    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <section class="gate-grid-section mb-4">
                <h2 class="section-title mb-3">Gates</h2>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @for (var i = 1; i <= 9; i++)
                    {
                        var gateNumber = i;
                        <div class="col">
                            <div class="card gate-card h-100">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title text-center">
                                            @Utils.ToRoman(gateNumber)
                                        </h5>
                                        @* Later: status summary / difficulty from DB *@
                                        <p class="card-text text-center small" style="color: silver">
                                            @if( i < gates.Count + 1)
                                            {
                                                @("Difficulty: " + Enum.GetName(typeof(Utils.Difficulty), gates[i - 1].GateOverallDifficultyLevel) ?? "TBD");
                                            }
                                            else
                                            {
                                                @("Difficulty: TBD");
                                            }
                                        </p>
                                    </div>
                                    <div class="text-center mt-3">
                                        <NavLink class="btn btn-sm btn-primary" href="@($"/gate/{gateNumber}")">
                                            Go
                                        </NavLink>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>

            <section class="keys-section">
                <h2 class="section-title mb-3">Keys</h2>
                <div class="keys-grid d-flex flex-wrap gap-2">

                    @for (var k = 0; k < unlockedKeys.Count; k++)
                    {
                        var key = unlockedKeys[k];

                        <div class="key-pill key-discovered" @onclick="() => ToggleKeyDetails(key)">
                            <div class="key-pill-icon">
                                <span>@(k + 1)</span>
                            </div>
                            @if (expandedKey == key)
                            {
                                <input type="text"
                                       class="form-control form-control-sm key-pill-input"
                                       readonly
                                       value="@key.KeyValue" />
                            }
                        </div>
                    }
                    @for (var k = unlockedKeys.Count; k < 27; k++)
                    {
                        <div class="key-icon key-locked">
                            <span>@(k + 1)</span>
                        </div>
                    }
                </div>
            </section>
        </div>

        <div class="col-12 col-lg-4">
            <section class="updates-section">
                <h2 class="section-title mb-3">Updates & Hints</h2>
                <div class="updates-card p-3">
                    <p class="small mb-1" style="color: silver">Last updated: @Utils.FormatUtc(newsItems.FirstOrDefault()?.PublishedAtUtc)</p>
                    <hr />
                    <article class="updates-body">
                        @* For now, static; later you can pull from a DB or markdown file *@
                        <p>Msyu9Gates v2.0</p>
                        <ul>
                            @foreach(var news in newsItems)
                            {
                                <li><strong>
                                        @Utils.FormatUtc(news.PublishedAtUtc)
                                    </strong> - @($"[{Enum.GetName(typeof(Utils.NewsType), (int)news.Type)}]")  @news.Body
                                </li>
                            }
                        </ul>
                    </article>
                </div>
            </section>
        </div>
    </div>
</div>

@code {
    HttpClient http = new HttpClient();
    List<KeyDto> unlockedKeys = new List<KeyDto>();
    List<GateDto> gates = new List<GateDto>();
    List<NewsDto> newsItems = new List<NewsDto>();
    KeyDto? expandedKey;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await UpdateUnlockedKeys();
        }
    }

    private async Task UpdateUnlockedKeys()
    {
        Uri uri = new Uri(nav.BaseUri + "api/keys/unlocked");
        var response = await http.GetAsync(uri);
        if (response.IsSuccessStatusCode)
        {
            unlockedKeys = await response.Content.ReadFromJsonAsync<List<KeyDto>>() ?? new List<KeyDto>() { };
        }

        uri = new Uri(nav.BaseUri + "api/gates/all");
        response = await http.GetAsync(uri);
        if(response.IsSuccessStatusCode)
        {
            gates = await response.Content.ReadFromJsonAsync<List<GateDto>>() ?? new List<GateDto>() { };
        }
        StateHasChanged();

        uri = new Uri(nav.BaseUri + "api/news/all");
        response = await http.GetAsync(uri);
        if (response.IsSuccessStatusCode)
        {
            newsItems = await response.Content.ReadFromJsonAsync<List<NewsDto>>() ?? new List<NewsDto>() { };
        }
        StateHasChanged();
    }

    private void ToggleKeyDetails(KeyDto key)
    {
        if(expandedKey == key)
        {
            expandedKey = null;
        }
        else
        {
            expandedKey = key;
        }
    }
}